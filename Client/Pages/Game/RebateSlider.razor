@implements IDisposable
@inject GameSignalRClient _signalRClient
@inject GameStateWrapper _gameState

Fixed percentage rebate:
<input type="range" 
    min="0" 
    max="100"
    style="width: 33%"
    @bind="_rebateRate" 
    @oninput="(e) => OnRangeInput(int.Parse(e.Value as string))" />
@_actualRebateRate %

@code {
    private Subject<bool> _disposed = new();
    private BehaviorSubject<int?> _rebate = new(null);
    private int? _rebateRate = 0;
    private bool _dirty;
    private int? _actualRebateRate;

    protected override async Task OnInitializedAsync()
    {
        _rebate
            .TakeUntil(_disposed)
            .Throttle(TimeSpan.FromSeconds(0.5))
            .Where(o => o is not null)
            .Subscribe(async o =>
            {
                await _signalRClient.SetRebate(o!.Value);
                _dirty = false;
            });

        _gameState.CurrentPlayer
            .TakeUntil(_disposed)
            .Select(p => p?.Rebate)
            .Subscribe(o =>
            {
                if (!_dirty)
                {
                    if (_rebate.Value != o)
                    {
                        _rebate.OnNext(o);
                    }

                    _rebateRate = o;
                }

                _actualRebateRate = o;
                StateHasChanged();
            });
    }

    private async Task OnRangeInput(int value)
    {
        _dirty = true;
        _rebate.OnNext(value);
    }

    public void Dispose()
    {
        _disposed.OnNext(true);
    }
}
